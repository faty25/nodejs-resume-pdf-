<div class="container">
    <p class="text-primary">tu va utilis√© <%= theme %></p>
    <form action="/resume-cv" class="text-primary form" method="POST">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="">Full Name</label>
                <input type="text" name="name" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">Telephone</label>
                <input type="text" name="phone" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">E-mail</label>
                <input type="text" name="email" class="text form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="">Pere Name</label>
                <input type="text" name="P_name" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">Mere Name</label>
                <input type="text" name="M_name" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">Date de naissance</label>
                <input type="text" name="naissance" class="text form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="">Presentation</label>
                <textarea class="text form-control" name="presenter" id="" rows="2"></textarea>
        </div>
        <h4>Expertise</h4>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="">Exp 1</label>
                <input type="text" name="exp_1" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">Exp 2</label>
                <input type="text" name="exp_2" class="text form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label for="">Exp 3</label>
                <input type="text" name="exp_3" class="text form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="">Competences</label>
            <input type="text" placeholder="this whould be a comma seperated list" name="competence" class="text form-control">
        </div>
        <div class="form-group">
          <select name="theme" id="" hidden>
              <option value="<%= theme %>"><%= theme %></option>
          </select>
        </div>
        <button class="btn btn-primary" type="submit">Envoyer</button>
    </form>
</div>